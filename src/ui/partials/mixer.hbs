<!-- Mixer Strips -->
<div class="flex gap-6 justify-center grow px-12 py-6">
  <template x-for="(slot, index) in slots" :key="index">
    <!-- Mixer Strip -->
    <div
      class="channel-strip w-16"
      :class="slot.isActive ? 'opacity-100' : 'opacity-50'"
    >
      <div
        class="slot-label text-center truncate text-[10px] uppercase font-black mb-1 cursor-pointer"
        x-text="getSlotDisplayName(slot, index)"
        @click="auditionSlot(index)"
      ></div>
      <div
        @mousedown="startVolumeDrag($event, index)"
        @dblclick="resetSlotVolume(index)"
        @click.alt="resetSlotVolume(index)"
        class="fader-container h-[180px] w-8 border-2 border-black mx-auto my-1 flex items-end relative cursor-pointer select-none"
      >
        <div
          class="volume-indicator w-full bg-black"
          :style="`height: ${getSlotFaderPosition(index)}%`"
        ></div>
      </div>
      <div class="text-center grid grid-cols-1 gap-0.5 text-[10px] font-black">
        <div
          class="volume-value text-center"
          x-text="getSlotVolumeDisplay(index)"
        ></div>
        <button
          @click="toggleSlotMute(index)"
          class="uppercase"
          :class="slot.muted ? 'bg-red-600 text-white' : 'text-black'"
        >Mute</button>
        <button
          @click="toggleSlotSolo(index)"
          class="uppercase"
          :class="slot.soloed ? 'bg-yellow-400' : ''"
        >Solo</button>
      </div>
    </div>
  </template>
</div>