<div
  class="flex p-[2px] items-center gap-1 group"
  :class="preset.index === getRoot()?.currentPresetIndex ? 'bg-neutral-700 ring-2 ring-inset ring-black' : 'bg-black'"
>
  <button
    @click="loadPreset(preset.index); document.body.focus()"
    @mousedown.prevent
    tabindex="-1"
    :id="optionId(preset.index)"
    data-preset-item="true"
    :data-preset-index="preset.index"
    class="flex-1 grow text-left break-all text-white text-[10px] tracking-wider px-0.5 py-1"
  >
    <div x-text="preset.displayName"></div>
  </button>
  <button
    @click.stop="preset.index === getRoot()?.currentPresetIndex && toggleFavorite(preset.index)"
    @mousedown.prevent
    tabindex="-1"
    class="shrink-0 px-1 py-1 text-[10px]"
    :class="preset.isFavorite ? 'text-white' : preset.index === getRoot()?.currentPresetIndex ? 'text-white text-opacity-0 hover:group-hover:text-opacity-100 group-hover:text-opacity-50' : 'opacity-0'"
    :disabled="preset.index !== getRoot()?.currentPresetIndex"
    aria-label="Toggle favorite"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 16 16"
      fill="currentColor"
      class="size-4"
      :class="preset.isFavorite ? 'fill-current current-none' : 'fill-none stroke-current'"
    >
      <path
        fill-rule="evenodd"
        d="M8 1.75a.75.75 0 0 1 .692.462l1.41 3.393 3.664.293a.75.75 0 0 1 .428 1.317l-2.791 2.39.853 3.575a.75.75 0 0 1-1.12.814L7.998 12.08l-3.135 1.915a.75.75 0 0 1-1.12-.814l.852-3.574-2.79-2.39a.75.75 0 0 1 .427-1.318l3.663-.293 1.41-3.393A.75.75 0 0 1 8 1.75Z"
        clip-rule="evenodd"
      />
    </svg>
  </button>
</div>